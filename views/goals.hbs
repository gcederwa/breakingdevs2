<head>
  <title>Enter Your Goals</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <link rel="stylesheet" href="/styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-1.10.2.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <style>
    body {

      height: 100vh;
      margin: 0;
      background-color: #f0f0f0;
      font-family: Arial, sans-serif;
    }

    #goals-form-container {
      background-color: #fff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    #goals-form input[type="text"] {
      width: 100%;
      padding: 10px;
      margin-bottom: 10px;
      border-radius: 4px;
      border: 1px solid #ddd;
    }

    #goals-form input[type="button"],
    #goals-form input[type="submit"] {
      padding: 10px 20px;
      border: none;
      border-radius: 4px;
      background-color: #2d3d33;
      color: #fff;
      cursor: pointer;
    }

    #goals-form input[type="button"]:hover,
    #goals-form input[type="submit"]:hover {
      background-color: rgb(57, 73, 61)152, 179);
    }
  </style>
</head>

<body>
  <header>
    <h1>Mentor Match</h1>
    <nav>
      {{#if userName}}
      <p>Hi {{userName}}!</p>
      {{else}}
      {{/if}}
      <ul>
        <li><a href="/mentee-dashboard">Home</a></li>
        <li><a href="/my-mentors">My Mentors</a></li>
        <li><a href="/select-mentor">Select a Mentor</a></li>
        <li><a href="/goals">Your Goals</a></li>
        <li><a href="/about-us">About Us</a></li>
        <li class="dropdown" id="userDropdown">
          <img src="{{#if profilePicture}}{{profilePicture}}{{else}}user-silhouette.png{{/if}}" id="userIcon"
            width="40px">
          <div class="dropdown-content" id="dropdownContent">
            <a href="/logout" id="logoutLink">Logout</a>
          </div>
        </li>
      </ul>

    </nav>
  </header>

  <h1>Enter Your Goals</h1>

  <div id="goals-form-container">
    <form id="goals-form" action="/goals" method="POST">
      <div id="goal-fields">
        <label for="goal1">Goal:</label><br>
        <input type="text" id="goal1" name="goal1"><br>
      </div>
      <input type="button" id="add-goal" value="Add Another Goal">
      <input type="submit" value="Submit">
    </form>
  </div>

  {{#if goals}}
  <h2>Your Goals</h2>
  <ul>
    {{#each goals}}
    <li>{{this.description}}</li>
    {{/each}}
  </ul>
  {{/if}}

  <script>
    $(document).ready(function () {
      var goalCount = 1;

      $('#add-goal').click(function () {
        goalCount++;
        var newGoalField = '<label for="goal' + goalCount + '">Goal:</label><br><input type="text" id="goal' + goalCount + '" name="goal' + goalCount + '"><br>';
        $('#goal-fields').append(newGoalField);
      });
    });
  </script>
</body>

</html>